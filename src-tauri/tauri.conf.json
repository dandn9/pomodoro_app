{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:5173",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "pomodoro_2",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,

            "shell": {
                "all": false,
                "open": true
            },
            "fs": {
                "all": true,
                "scope": ["**"]
            },
            "path": { "all": true },
            "notification": {
                "all": true
            }
        },
        "systemTray": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "pomodoro",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fileDropEnabled": false,
                "title": "app",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "focus": true
            }
        ]
    }
}
